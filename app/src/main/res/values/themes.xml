<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppVern" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#43A047</item>
        <item name="colorPrimaryVariant">#43A047</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.MyAppVern.TextView</item>

    </style>
    <style name="Theme.MyAppVern.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#43A047</item>
    </style>

    <style name ="Theme.MyAppVern.Down_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name ="Theme.MyAppVern.Up_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>


</resources>